# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# terminal emulator
super + {_,shift + }Return
  {alacritty, bspc rule -a \* -o state=floating && alacritty}

# program launcher
super + {_, shift + }@space
	{$HOME/.config/rofi/launchers/launcher.sh, $HOME/.config/rofi/powermenu/powermenu.sh}

# Randomize wallpaper
super + alt + w
  feh --randomize --bg-fill /home/boketto/Wallpapers

# toggle all windows
super + d
  bspc query -N -n .local.window | xargs -I ID bspc node ID -g hidden

# toggle polybar
super + p
  $HOME/bin/toggle_polybar.sh

# Launch Applications
super + shift + {f,e,p,i,x,c}
	{firefox, \
	thunar, \
	pavucontrol, \
	firefox --private-window, \
	$HOME/bin/xcolor-pick.sh, \
	alacritty -e calcurse}

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the last node/desktop
super + {_,shift + }Tab
	bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# set the node flags
super + shift + s
	bspc node -g sticky

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# audio
XF86AudioRaiseVolume
  amixer set Master 5%+

XF86AudioLowerVolume
  amixer set Master 5%-

XF86AudioMute
  pactl set-sink-mute @DEFAULT_SINK@ toggle

# Screenshot
@Print
  flameshot gui

# brightness
XF86MonBrightnessUp
  brightnessctl set 355+

XF86MonBrightnessDown
  brightnessctl set 355-

# clipmenu
super + v
  clipmenu

# emoji-menu
super + e
  rofi -modi emoji -show emoji
