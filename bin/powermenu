#!/bin/env bash

OPTIONS=(
  "󰜉  Lock screen"
  "󰤄  Hibernate"
  "󰒲  Suspend"
  "󰌾  Logout"
  "󰍃  Reboot"
  "󰐥  Shutdown"
)
CHOICE=$(printf '%s\n' "${OPTIONS[@]}" | rofi -dmenu -p "Power Menu")
case "$CHOICE" in
"󰜉  Lock screen")
  sh $HOME/bin/screen_lock
  ;;
"󰤄  Hibernate")
  systemctl hibernate
  ;;
"󰒲  Suspend")
  systemctl suspend && sh $HOME/bin/screen_lock
  ;;
"󰌾  Logout")
  pkill -KILL -u "$USER"
  ;;
"󰍃  Reboot")
  systemctl reboot
  ;;
"󰐥  Shutdown")
  systemctl poweroff
  ;;
*)
  exit 0
  ;;
esac
